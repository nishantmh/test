                                    <button type="submit" class="btn bgRColor fColor btnWidth" ng-disabled="addMap.$invalid">Add</button>
                                    <a href="index.html" class="btn bgRColor fColor btnWidth">Reset</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div id="addUser" class="tab-pane fade">
                    <form name="usrInfo" ng-submit="AddUsrInfo()">
                        <div class="col-sm-12 col-xs-12 tabContainer no-padding">
                            <h2 class="fRColor text-center">Add User</h2>
                            <hr />
                            <div class="col-sm-8 col-xs-12 mid no-padding">


                                <div class="col-sm-12 col-xs-12 form-group">
                                    <div class="col-sm-6 col-xs-6 no-padding">
                                        <label for="name" class="lblText">user ID</label>
                                    </div>
                                    <div class="col-sm-6 col-xs-6 no-padding">
                                        <input type="text" name="usrname" class="form-control" ng-model="usr.username" placeholder="User Id" required>
                                    <div ng-messages="usrInfo.usrname.$error">
									 <div ng-message="required"><font color="red">This field is required</font></div>
									</div>
								    </div>
                                </div>

                                <div class="col-sm-12 col-xs-12 text-center form-group">
                                    <button type="submit" class="btn bgRColor fColor btnWidth" ng-disabled="usrInfo.$invalid">Add</button>
                                    <a href="index.html" class="btn bgRColor fColor btnWidth">Reset</a>
                                </div>
                            </div>
                            </div>
                    </form>
                </div>
                
                <div id="deall" class="tab-pane fade">
                    <form name="rmDev" ng-submit="removeDev()">
                        <div class="col-sm-12 col-xs-12 tabContainer no-padding">
                            <h2 class="fRColor text-center">De-Allocate Device</h2>
                            <hr />
                            <div class="col-sm-8 col-xs-12 mid no-padding">


                              <div class="col-sm-12 col-xs-12 form-group">
                                    <div class="col-sm-6 col-xs-6">
                                        <label for="cEmail" class="lblText">Device ID:</label>
                                    </div>
                                    <div class="col-sm-6 col-xs-6">
                                        <select class="form-control" name="sel" id="sel1" ng-model="dev.deviceID"   ng-options=" item.deviceID for item in devInfo track by item.deviceID" required></select>
                                   <div ng-messages="rmDev.sel.$error">
									 <div ng-message="required"><font color="red">This field is required</font></div>
									</div>
								    </div>
									

                                </div>

                                <div class="col-sm-12 col-xs-12 text-center form-group">
                                    <button type="submit" class="btn bgRColor fColor btnWidth" ng-disabled="rmDev.$invalid">Remove</button>
                                    <a href="index.html" class="btn bgRColor fColor btnWidth">Reset</a>
                                </div>
                            </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</script>

