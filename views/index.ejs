                                    <div ng-messages="addMap.devID.$error">
									 <div ng-message="required"><font color="red">This field is required</font></div>
									</div>
									</div>
                                </div>
                                <div class="col-sm-12 col-xs-12 form-group">
                                    <div class="col-sm-6 col-xs-6 no-padding">
                                        <label for="cEmail" class="lblText">object ID:</label>
                                    </div>
                                    <div class="col-sm-6 col-xs-6 no-padding">
                                        <select class="form-control" name="objID" id="sel1" ng-model="ObjMap.objID" ng-options=" item.objID for item in objectInfo track by item.objID" required></select>
